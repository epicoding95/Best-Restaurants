
@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Cuisine>;

    <h2>List of Cuisine</h2>
    @if(Model.Count== 0)
    {
        <h3> No Cuisine has been added yet!!</h3>
    }

    <ul>
        @foreach (Cuisine cuisine in Model)
        {
            <li>
                @Html.ActionLink($"{cuisine.Name}","Details", new { id= cuisine.CuisineId})
            </li>
        }
    </ul>
    <p>@Html.ActionLink("Add new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Check out all the Restaurants", "Index", "Restaurants")</p>